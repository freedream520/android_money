<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget37"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titile_gre_ym"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height"
        android:background="@drawable/topnavbg"
        android:gravity="center"
        android:text="@string/main_config"
        android:textColor="@drawable/white"
        android:textSize="@dimen/titleTextSize" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_corner_gridview"
        android:padding="10dp" >

        <TableRow>

            <TextView
                android:id="@+id/username"
                style="@style/textstyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/config_username" >
            </TextView>

            <EditText
                android:id="@+id/untext"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@null"
                android:textSize="18sp" >
            </EditText>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/password"
                style="@style/textstyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/config_pasword" >
            </TextView>

            <EditText
                android:id="@+id/passtext"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="@string/config_please_pasword"
                android:inputType="number"
                android:textSize="18sp" >
            </EditText>

            <CheckBox
                android:id="@+id/showpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </CheckBox>

            <TextView
                style="@style/textstyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/config_show_pasword" >
            </TextView>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/config_inremoteIp"
                style="@style/textstyle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/config_remoteIp" >
            </TextView>

            <EditText
                android:id="@+id/remoteIp"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/config_inremoteIp"
                android:textSize="18sp" >
            </EditText>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/returnbtn"
            android:layout_width="@dimen/btn_size"
            android:layout_height="wrap_content"
            android:text="@string/con_return" >
        </Button>

        <Button
            android:id="@+id/savebtn"
            android:layout_width="@dimen/btn_size"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/con_save" >
        </Button>
    </LinearLayout>

</LinearLayout>