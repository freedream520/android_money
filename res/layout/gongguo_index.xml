<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_contentView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titile_gre_ym"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_height"
        android:background="@drawable/topnavbg"
        android:gravity="center"
        android:text="@string/gongguo_title"
        android:textColor="@drawable/white"
        android:textSize="@dimen/titleTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time"
            style="@style/textstyle1"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="@string/timestr2"
            android:textSize="@dimen/editTextSize" >
        </TextView>

        <Button
            android:id="@+id/chooseTime_btn"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width"
            android:layout_weight="1"
            android:text="@string/con_chooseDate"
            android:textSize="@dimen/editTextSize" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/textstyle1"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="@string/gongguo_plan"
            android:textSize="@dimen/editTextSize" >
        </TextView>

        <TextView
            android:id="@+id/plan_show"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="@dimen/editTextSize" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mk_plan"
            style="@style/textstyle1"
            android:layout_width="@dimen/text_width"
            android:layout_height="wrap_content"
            android:text="@string/gongguo_planmake"
            android:textSize="@dimen/editTextSize" >
        </TextView>

        <EditText
            android:id="@+id/plan"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_width"
            android:layout_weight="1"
            android:hint="@string/gongguo_toPlan"
            android:lines="4"
            android:textSize="@dimen/editTextSize" >
        </EditText>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="vertical"
        android:padding="5dp" >

        <TableLayout
            android:id="@+id/gongguo_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_corner_gridview"
            android:padding="10dp"
            android:scrollbars="vertical" >
        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/saveGonguo_btn"
        style="@style/saveBtnStyle" />

</LinearLayout>